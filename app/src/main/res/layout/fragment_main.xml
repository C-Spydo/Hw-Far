<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:background="#000000">

    <TextView android:text="Find the Distance Between Two Points" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:background="#1569C7"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:shadowColor="@color/abc_search_url_text_normal" />



    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_alignParentBottom="true">


    </ScrollView>

    <LinearLayout
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:background="#2554C7"
            android:id="@+id/linearLayout"
        android:layout_alignTop="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Point 1"
                android:id="@+id/point1"
                android:background="#357EC7"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:textSize="27dp" />

            <TextView
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/coord1"
                android:background="#95B9C7"
                android:freezesText="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.22" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView2"
                android:layout_weight="0.21"
                android:clickable="true"
                android:freezesText="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Point 2"
                android:id="@+id/point2"
                android:background="#357EC7"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:textSize="27dp" />

            <TextView
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/coord2"
                android:background="#95B9C7"
                android:freezesText="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.22" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:text="Go"
                android:id="@+id/gobutton"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView3"
                android:layout_weight="0.10"
                android:background="#2B65EC"
                android:text="Distance Covered:"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:freezesText="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/txtResult"
                android:layout_weight="0.15"
                android:background="#95B9C7"
                android:freezesText="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Distance"
                android:id="@+id/btnSave"
                android:background="#357EC7"
                android:textColor="#FFFFFF"
                android:shadowColor="#FFFFFF"/>

        </LinearLayout>
</RelativeLayout>

